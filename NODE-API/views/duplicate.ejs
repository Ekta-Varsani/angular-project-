<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="../assets/style.css">
</head>
<body>
    < class="container">
        
            <div class="row">
                <!-- <form class="d-flex" method="post" action="/user"> -->
                <form class="d-flex">
                    <button type="button" class=" btn btn-light profile m-2 border border-info text-info">Upload<br>
                        photo</button>
                    <input type="text" name="name" class=" form-control form-control-sm m-2 border border-info text-info" placeholder="Enter Name">
                    <input type="text" name="email" class=" form-control form-control-sm m-2 border border-info text-info" placeholder="Enter Email Id">
                    <select class=" form-select form-select-sm m-2 border border-info" name="countryName">
                        <option disabled selected>Country</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                    <input type="text" name="phone" class=" form-control form-control-sm m-2 border border-info text-info" placeholder="Enter Phone Number">
                    <button type="button" class="btn btn-info addUser border border-info text-white">
                        +
                    </button>
                </form>
            </div>
            <div class="row">
                <form class="d-flex">
                    <input class="form-control me-2 border border-info " type="text" placeholder="Search via Email, name or phone number">
                    <button class="btn btn-info text-white" type="button">Search</button>
                </form>
            </div><br><br>
            <div class="row">
                <table class="table table-striped">
                    <thead class="bg-info text-white">
                        <tr>
                            <td>ID</td>
                            <td>Name</td>
                            <td>Email</td>
                            <td>Country</td>
                            <td>Phone</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% userList.forEach(users => { %>
                            <td><%= users._id %></td>
                            <td><%= users.UserName %></td>
                            <td><%= users.Email %></td>
                            <td><%= users.countryId %></td>
                            <td><%= users.PhoneNumber %></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn btn-info text-white dropdown-toggle" data-bs-toggle="dropdown">
                                        Action
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#updateUser">Edit</button>
                                        </li>
                                        <li>
                                            <button type="button" class="btn">Remove</button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <% }) %>
                        </tr>
                    </tbody>
                </table>
            </div>
    </div>
</body>
</html>